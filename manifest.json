{
  "manifest_version": 3,
  "name": "Dot Cat Walker",
  "version": "1.0.1",
  "description": "A tiny pixel cat walks around on every page.",
  "permissions": ["storage"],
  "action": {
    "default_title": "Toggle Cat Walker",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/cat1.png", "assets/cat2.png", "assets/cat3.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
